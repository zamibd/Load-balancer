# Valkey (Redis-compatible) Configuration
VALKEY_HOST=valkey
VALKEY_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Grafana Configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# HAProxy Stats Authentication
HAPROXY_STATS_USER=admin
HAPROXY_STATS_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_PROMETHEUS=false
